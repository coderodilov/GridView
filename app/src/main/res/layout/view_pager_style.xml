<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bg_style"
        android:gravity="center"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView_VP"
            android:layout_width="match_parent"
            app:riv_border_color="@color/white"
            app:riv_corner_radius_top_left="12dp"
            app:riv_corner_radius_top_right="12dp"
            app:riv_border_width="3dp"
            android:layout_height="0dp"
            android:src="@drawable/f1"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvImageTitle_Vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample"
            android:background="@drawable/text_bg_style"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>


</LinearLayout>